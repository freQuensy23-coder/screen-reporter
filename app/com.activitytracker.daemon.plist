<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.activitytracker.daemon</string>
    <key>ProgramArguments</key>
    <array>
        <string>/Applications/ActivityTracker.app/Contents/MacOS/daemon</string>
    </array>
    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <true/>
    <key>StandardOutPath</key>
    <string>~/Library/Logs/activity_tracker.log</string>
    <key>StandardErrorPath</key>
    <string>~/Library/Logs/activity_tracker_error.log</string>
</dict>
</plist> 